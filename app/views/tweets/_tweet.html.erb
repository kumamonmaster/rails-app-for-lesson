<div class="list-group-item">
  <h4 class="user">
    <span class="user-name">
      <strong>
        <%= link_to tweet.user.email, user_path(tweet.user) %>
      </strong>
    </span>
    <span class="time pull-right">
      <%= date_format(tweet.created_at) %>
    </span>
    <div class="clear"></div>
  </h4>

  <div class="tweet-content">
    <p>
      <%= tweet.body %>
    </p>


    <div class="content-footer">
      <% if tweet.favorited_by? current_user %>
        <%= link_to "お気に入りの解除", tweet_favorites_path(tweet), method: :delete %>
      <% else %>
        <%= link_to "お気に入りの登録", tweet_favorites_path(tweet), method: :post %>
      <% end %>
      <% if current_user.id == @user.id %>
        <% if current_user.id == tweet.user.id %>
          <%= link_to "つぶやきを削除", tweet_path(tweet), method: :delete %>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
